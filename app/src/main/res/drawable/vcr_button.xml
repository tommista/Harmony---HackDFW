<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <stroke
                android:width="1dp"
                android:color="@color/orange"/>
            <corners
                android:radius="20dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/gray"/>

        </shape>

    </item>


    <item android:state_pressed="false" >
        <shape>

            <stroke
                android:width="1dp"
                android:color="@color/orange"/>
            <corners
                android:radius="20dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/blueGray"/>
        </shape>
    </item>
</selector>